{% extends '_base.html.twig' %}

{% block title %}Ville de Guesnain - Les associations{% endblock %}

{% block body %}
    
        <div class="container">
        <div class="row">
        
            {% for association in associations %}
                <div class="col-lg-4 col-md-6 col-sm-12">    
                    <div class="card">
                        {% if association.photo != null %}
                            <img src="\img\{{ association.photo }}" class="card-img-top" alt="{{ association.nom }}">
                        {% else %}
                            <img src="\img\content\personnel\anonyme.jpg" class="card-img-top" alt="{{ association.nom }}">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ association.nom }}</h5>
                            <p class="card-text">{{ association.presentation }}</p>                        
                        </div>
                        <div class="card-footer text-right">                        
                            <a class="text-muted" href="{{ path('mairie_association', { 'id': association.id }) }}">En savoir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}        
        </div>
        </div>
        
    

{% endblock %}
